<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vzardd.greenqube">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Greenqube">
        <activity android:name=".groupclasses.AddParticipantsActivity"></activity>
        <activity android:name=".groupclasses.EditGroupActivity" />
        <activity android:name=".chatclasses.GroupInfoActivity" />
        <activity android:name=".groupclasses.GroupChatActivity" />
        <activity android:name=".CreateGroupActivity" />
        <activity android:name=".chatclasses.ChatScreenActivity" />
        <activity android:name=".chatclasses.ChooseChat" />
        <activity android:name=".FriendsActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>